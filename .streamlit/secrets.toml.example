[auth]
cookie_name = "casadisteo_portal"
cookie_key = "CHANGE_ME_TO_A_LONG_RANDOM_STRING"
cookie_expiry_days = 7

[auth.credentials]
# Add one section per user under auth.credentials.usernames.<username>
# Passwords must be bcrypt hashes.
#
# Example to generate a hash locally:
#   python -c "import bcrypt; print(bcrypt.hashpw(b'YOUR_PASSWORD', bcrypt.gensalt()).decode())"
#
# Then paste the hash below.

[auth.credentials.usernames.admin]
name = "Admin"
password = "PASTE_BCRYPT_HASH_HERE"

[google_sheets]
# Spreadsheet ID from the Google Sheets URL:
# https://docs.google.com/spreadsheets/d/<SHEET_ID>/edit#gid=0
sheet_id = "PASTE_SHEET_ID_HERE"
worksheet = "inventory"

# Paste the ENTIRE service account JSON as a single line string.
# Tip: keep the JSON as-is, but wrap it in triple quotes.
gcp_service_account_json = """{
  "type": "service_account",
  "project_id": "YOUR_PROJECT",
  "private_key_id": "…",
  "private_key": "-----BEGIN PRIVATE KEY-----\n…\n-----END PRIVATE KEY-----\n",
  "client_email": "…@….iam.gserviceaccount.com",
  "client_id": "…",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "…"
}"""
